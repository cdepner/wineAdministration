{% extends '::base.html.twig' %}
{% block title %}Weinverwaltung - Weinverwaltung{% endblock %}
{% block body %}
    {% include 'WineAdministrationBundle:Default:navigation.html.twig' %}
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Rebsorten</th>
                <th>Jahrgang</th>
                <th>Weingut</th>
                <th>Stadt</th>
                <th>Region</th>
                <th>Land</th>
                <th>Art</th>
                <th>Typ</th>
                <th>Füllmenge</th>
                <th>Preis</th>
                <th>Verfügbar</th>
            </tr>
        </thead>
        <tbody>
{% for wine in wines %}
            <tr>
                <td>{{ wine.name }}</td>
                <td>{{ wine.varietal|join(', ') }}</td>
                <td>{{ wine.vintage }}</td>
                <td>{{ wine.vineyard }}</td>
                <td>{{ wine.city }}</td>
                <td>{{ wine.region }}</td>
                <td>{{ wine.country }}</td>
                <td>{{ wine.kind }}</td>
                <td>{{ wine.type }}</td>
                <td>{{ wine.volume|number_format(2, ',', '.') }}</td>
                <td>{{ wine.price|number_format(2, ',', '.') }} €</td>
                <td>{{ wine.available ? 'x' : 'o' }}</td>
            </tr>
{% endfor %}
        </tbody>
    </table>
{% endblock %}